<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />
	<aop:aspectj-autoproxy />
		
	<!-- 请求转发控制器 -->
	<bean name="mbpDispatchController" class="mbp.web.MbpDispatchController" >
		<property name="controllers">
			<map>
				<entry key="/payment">
					<ref bean="corePaymentController"/>
				</entry>
			</map>
		</property>
	</bean>
	
	<!-- 核心业务处理 -->
	<bean id="corePaymentController" class="mbp.web.CorePaymentController">
		<property name="bizTimeOuts">
			<map>
			</map>
		</property>
		<property name="asynBizTypes">
			<list>
				<value>M009</value>
				<value>M010</value>
			</list>
		</property>
	</bean>
</beans>